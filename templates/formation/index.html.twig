{% extends 'base.html.twig' %}

{% block title %}Mes Formations
{% endblock %}

{% block body %}


	<div class="body">
		<h2>Mes Formations</h2>

		<ul>
			{% for formation in formations %}
				<li>
					<strong>{{ formation.nom }}</strong>:
					<span>{{ formation.date_start|date('d/m/Y')}}</span> -
					<span>{{ formation.date_end|date('d/m/Y')}}</span>
					<p>{{ formation.description }}</p>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
